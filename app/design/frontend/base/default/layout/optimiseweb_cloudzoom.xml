<layout>

    <!-- Product View -->
    <catalog_product_view>
        <reference name="head">
            <action method="addItem" ifconfig="optimisewebcloudzoom/general/loadjs"><type>skin_js</type><name>optimiseweb/cloudzoom1/cloud-zoom.1.0.3.min.js</name></action>
            <action method="addItem" ifconfig="optimisewebcloudzoom/general/loadcss"><type>skin_css</type><name>optimiseweb/cloudzoom1/cloud-zoom.css</name></action>
        </reference>
        <reference name="product.info.media">
            <action method="setTemplate" ifconfig="optimisewebcloudzoom/general/enabled"><template>optimiseweb/cloudzoom/media.phtml</template></action>
        </reference>
    </catalog_product_view>

    <!-- Product Reviews View -->
    <review_product_list>
        <reference name="head">
            <action method="addItem" ifconfig="optimisewebcloudzoom/general/loadjs"><type>skin_js</type><name>optimiseweb/cloudzoom1/cloud-zoom.1.0.3.min.js</name></action>
            <action method="addItem" ifconfig="optimisewebcloudzoom/general/loadcss"><type>skin_css</type><name>optimiseweb/cloudzoom1/cloud-zoom.css</name></action>
        </reference>
        <reference name="product.info.media">
            <action method="setTemplate" ifconfig="optimisewebcloudzoom/general/enabled"><template>optimiseweb/cloudzoom/media.phtml</template></action>
        </reference>
    </review_product_list>

</layout>